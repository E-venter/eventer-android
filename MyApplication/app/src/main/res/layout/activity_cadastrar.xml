<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.gabriel.testgooglemaps.LoginActivity" android:background="@mipmap/loginbg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" android:id="@+id/topoAzul"
        android:background="@mipmap/logo">
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" android:layout_marginTop="450dp" android:id="@+id/botaoGo"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LoginGo" android:layout_gravity="center"
            android:background="@mipmap/go"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/CamposInput" android:layout_marginTop="220dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/emailC"
            android:background="@android:color/white"
            android:layout_centerHorizontal="true"
            android:hint="Nome e Sobrenome" android:layout_alignParentEnd="false" android:layout_alignParentStart="false"/>
        <EditText android:layout_width="wrap_content" android:layout_height="50dp" android:inputType="textEmailAddress|textPassword"
            android:ems="10" android:id="@+id/passwordC" android:background="@android:color/white"
            android:hint="Email"
            android:layout_below="@+id/emailC" android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>
        <EditText android:layout_width="wrap_content" android:layout_height="50dp" android:inputType="textPassword"
            android:ems="10" android:id="@+id/senhaC" android:background="@android:color/white"
            android:hint="Password"
            android:layout_below="@+id/passwordC" android:layout_alignStart="@+id/passwordC"
            android:layout_marginTop="5dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploadFoto" android:layout_below="@+id/senhaC"
            android:layout_alignStart="@+id/senhaC" android:background="@mipmap/cam"
            android:layout_marginTop="5dp" android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false" android:layout_marginLeft="180dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto Upload"
            android:id="@+id/checkBoxFoto"
            android:checked="false" android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:layout_alignTop="@+id/uploadFoto" android:layout_alignStart="@+id/senhaC"
            android:enabled="true" android:clickable="false"
            android:focusable="false" />
    </RelativeLayout>
</RelativeLayout>